extends ../layout
include ../events_list.jade

block title
	if (type == 'architecture')
		title= __('АРХИТЕКТУРА')
	else
		title= __('ДИЗАЙН')

block content_style
	link(rel='stylesheet', type='text/css', href='/build/css/works.css' + version)
	if (type == 'design')
		link(rel='stylesheet', type='text/css', href='/build/css/design.css' + version)

block content_scripts
	script(type='text/javascript', src='/build/js/works.js')

block content
	//-.additional_header
		if (subsidiarys.length > 0)
			.content_navigate_block.subsidiarys
				.navigate_title= __('Место')
				.navigate_items_block
					each subsidiary in subsidiarys
						.navigate_item(class=subsidiary._id.toString())= subsidiary.i18n.title.get(locale)

		if (categorys.length > 0)
			.content_navigate_block.categorys
				.navigate_title= __('Функция')
				.navigate_items_block
					each category in categorys
						.navigate_item(class=category._id.toString())= category.i18n.title.get(locale)

	.content_block_inner
		.works_block.works_big
			+eventsList(events)


		.works_tags_sort_block
			if (locale == 'ru')
				.sort_item.clear Все
				.sort_item.tags По категориям
				.sort_item.year По годам
				.sort_item.archive Архив
			else
				.sort_item.clear All
				.sort_item.tags By category
				.sort_item.year By year
				.sort_item.archive Archive