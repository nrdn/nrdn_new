extends ../layout
include ../events_list.jade

block title
	title= __('НАРОДНЫЙ АРХИТЕКТОР')

block content_style
	link(rel='stylesheet', type='text/css', href='/build/css/index.css' + version)

block content_scripts
	script(type='text/javascript', src='/build/js/index.js' + version)

block append works_bg
	.background_works
		each event in events
			if (event.images[0])
				.background_item(style='background-image: url(' + event.images[0].original + ')')

block content
	.content_outer_block
		each event in events
			.item_title= event.i18n.title.get(locale)

block footer
	.social_block
		a(href='https://www.facebook.com/nrdnru', target='_blank') 
		a(href='http://vk.com/narodnij', target='_blank') 
		a(href='http://instagram.com/narodnij', target='_blank') 