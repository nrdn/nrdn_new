extends ../layout

block title
	title= __('КОНТАКТЫ')

block content_style
	link(rel='stylesheet', type='text/css', href='/build/css/contacts.css' + version)

block content_scripts
	//- script(type='text/javascript', src='http://maps.googleapis.com/maps/api/js?sensor=false')
	//- script(type='text/javascript', src='/build/js/g_maps.js' + version)


block content
	.content_block_inner
		.map_block
			iframe(src="https://yandex.ru/map-widget/v1/?um=constructor%3A2008fa51e9ddee53fc07d59083b5a7ec91ed7ecf891082e9ee18f1639f42bd3c&amp;source=constructor", width="1240", height="450", frameborder="0")
		.about_block
			h1.about_title
				if (locale == 'ru')
					| НАРОДНЫЙ АРХИТЕКТОР
				else
					| NRDN
			.about_description
				if (locale == 'ru')
					include content/contacts/ru.html
				else
					include content/contacts/en.html
				.social_block
					a(href='https://www.facebook.com/nrdnru', target='_blank') 
					a(href='http://vk.com/narodnij', target='_blank') 
					a(href='http://instagram.com/narodnij', target='_blank') 

		.partners_block
			if (locale == 'ru')
				.partners_title НАШИ ПАРТНЕРЫ
			else
				.partners_title OUR PARTNERS
			.partners_list
				a.patner_item.no_rollout(href='http://www.world-ocean.ru/', target='_blank', style='background-image: url(images/design/partners/01-min.png)')
				a.patner_item.no_rollout(href='http://azgaz.ru/', target='_blank', style='background-image: url(images/design/partners/02-min.png)')
				a.patner_item.no_rollout(href='http://www.uar.ru/', target='_blank', style='background-image: url(images/design/partners/03-min.png)')
				a.patner_item.no_rollout(href='http://sadbaumana.ru/', target='_blank', style='background-image: url(images/design/partners/04-min.png);')
			if (locale == 'ru')
				.partners_title ИНФОРМАЦИОННЫЕ ПАРТНЕРЫ
			else
				.partners_title INFO PARTNERS
			.partners_list
				a.patner_item.no_rollout(href='http://www.archipeople.ru/', target='_blank', style='background-image: url(images/design/partners/p_ap.png)')
