.add
	line-height 16pt
.event_type_block
	display block
	margin-top 10px
	margin-bottom 25px
	width 100%
	overflow hidden
	a
		margin-right 15px
		cursor pointer
		line-height 16pt
		display block
		float left
		text-decoration underline
	.active
		background #000
		color #fff
		text-decoration none
	.last
		clear both
	hr
		clear both
		display block
		float none
		border none
		border-top 1px solid #000
		margin-top 30px


.event
	&.deleted
		display none
	.rm_event
		display none
	.rm_event_toggle
		span:nth-child(2)
			display none

.rm_event,
.rm_event_toggle
	text-decoration: none;
	color #777

.rm_event span,
.rm_event_toggle span
	border-bottom 1px dotted


.rm_event:after,
.rm_event_toggle:after
	content: ' | '

.main_menu_block
	&:target
		.event.design
			display none

.main_menu_inner
	&:target
		.event.architecture
			display none

.main_status
	&:target
		.title
			&:after
				content ': Корзина'
		.event
			display none
			&.deleted
				display block
				.rm_event
					display inline
					color #f00
				.rm_event_toggle
					span:nth-child(1)
						display none
					span:nth-child(2)
						display inline

		.add
			display none

// ------------------------------------


.sort_block
	display flex
	margin 10px 0
	justify-content space-between

.deleted_btn
	color #777

.date2017 a
	color #fc0
.date2016 a
	color #988100
.date2015 a
	color #222
.date2014 a
	color #4e4e4e
.date2013 a
	color #757575
.date2012 a
	color #969696
.date2011 a
	color #BFBFBF

.archive
	&:after
		content '●'
		color red