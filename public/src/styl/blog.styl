.content_block_inner
	max-width 1240px
	margin 0 auto
	min-width 400px

.menu_block
	position absolute

.menu_items
	a
		&:nth-child(4)
			border-bottom black 1px dotted

.post_item_block
	padding-bottom 100px
	overflow hidden
	&:hover
		background-color #F8F8F8

.post_img
	width 100%
	height auto

.post_title
	width 280px
	font 16pt/18pt 'Roboto'
	color black
	text-transform uppercase
	text-decoration none

.post_body
	max-width 865px
	margin-top 25px
	margin-left 375px
	font 12pt/16pt 'RobotoL'

.post_social
	margin-top 15px
	width 150px

.post_dscription_block
	width 280px
	margin-top 25px
	float left

.scroll_top
	width 120px
	height 25px
	margin-left -60px
	top 94%
	left 47%
	position fixed
	background-color rgba(255,255,255,0.7)
	z-index 9999
	cursor pointer
	display none
	padding-top 5px
	padding-left 60px
	&:hover
		background-color white
		.top_text
			border-bottom black 1px dotted

.top_text
	display inline
	font 10pt/12pt 'Roboto'