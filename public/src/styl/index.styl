.content_block
	margin-top 15%
	text-align center
	-webkit-user-select none

.works_block
	width 420px
	margin 0 auto
	color white

.work_item
	display none

.work_title
	font 28pt/28pt 'Roboto'
	text-transform uppercase
	border-top 1px solid white
	padding-top 5px
	a
		color white
		text-decoration none
		&:hover
			color white
			text-decoration underline

.work_logo
	width 80px
	height 80px
	display inline-block
	margin-bottom 5px
	cursor default
	svg
		fill white
		width 80px
		height 80px

.work_tag
	padding-bottom 8px
	font 18pt/20pt 'RobotoT'
	text-transform uppercase
	cursor default

.social_block
	width 110px
	position absolute
	z-index 999
	top 95%
	left 50%
	margin-left -55px
	a
		margin-right 35px
		color white
		text-decoration none
		font 11pt/12pt 'Social'

