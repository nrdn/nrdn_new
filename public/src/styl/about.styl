.menu_block_outer
	position fixed

.content_block_inner
	max-width 1240px
	margin 0 auto

.menu_items
	a
		&:nth-child(2)
			border-bottom 1px dotted

.about_block
	float left
	margin-top 35px
	margin-bottom 50px
	padding 0 20px
	@media (min-width: 1240px) {
		padding 0
	}


.about_title
	font 14pt/16pt 'Roboto'
	margin 0

.about_description
	margin-top 25px
	font 11pt/15pt 'RobotoL'
	p
		margin 0 0 8px 0

		&:last-child
			margin 0
	a
		color #000

.about_description img {
	width: 100%;
	margin-bottom: 25px;
}

.description {
	margin-bottom: 25px;
	width: calc(100vw - 40px);
	@media (min-width: 640px) {
		width: auto;
	}
}

.description.flex {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	flex-flow: row wrap
}

.description.block {
	margin-bottom: 0;
	@media (min-width: 640px) {
		width: calc(33% - 20px);
	}
}