.content_block_inner
	max-width 1240px
	margin 0 auto
	min-width 400px

.menu_items
	a
		&:nth-child(3)
			border-bottom black 1px dotted

.issuuembed
	display inline
	width 235px
	height 270px
	float left
	margin-right 16px
	&:nth-child(5n)
		margin-right 0px
	&.issuu-isrendered
		position relative
		&:after
			position absolute
			bottom 0
			right 0
			content ''
			background #FFF
			width 100%
			height 31px
			display block
			z-index 10000000