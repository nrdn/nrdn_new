.content_block_inner
	max-width 1240px
	margin 0 auto
	min-width 400px

.menu_items
	a
		&:nth-child(3)
			border-bottom black 1px dotted

.issuuembed
.a_issuuembed
	display inline
	width 235px
	height 270px
	float left
	margin-right 16px
	&:nth-child(5n)
		margin-right 0px
	&.issuu-isrendered
		position relative
		&:after
			position absolute
			bottom 0
			right 0
			content ''
			background #FFF
			width 100%
			height 31px
			display block
			z-index 10000000
	a
		display block
		width 100%
		height 240px
		background #353535 url('/images/design/museum.jpg') 50% no-repeat
		background-size auto 80%
		transition background
		&:hover
			background-size auto 90%