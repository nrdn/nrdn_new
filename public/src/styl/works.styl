.content_block_inner
	max-width 1260px
	margin 0 auto
	// min-width 400px

.menu_block_outer
	position fixed

.menu_items
	a
		&:nth-child(3)
			border-bottom 1px dotted

.works_block
	overflow auto
	display flex
	justify-content space-between
	flex-flow row wrap
	padding 0 10px
	@media (min-width: 640px) {
		display block
		padding 0
	}

.works_block::after {
  content: "";
  flex: auto;
}

.work_item
	width 100px
	height 120px
	margin-bottom 20px
	float left
	text-decoration none
	color black
	&.archive
		display none
		opacity 0
	&:hover
		.work_images
			opacity 1
	@media (min-width: 360px) {
		width 110px
	}
	@media (min-width: 390px) {
		width 120px
	}
	@media (min-width: 640px) {
		margin-left 20px
	}

.work_item:hover .work_logo, .work_item:hover .work_title
	display none

.work_tag_title
	margin-bottom 30px
	text-transform uppercase
	font 14pt/16pt 'RobotoT'

.work_logo
	width 75px
	height 75px
	position relative
	margin 0 auto
	line-height 75px
	text-align center
	svg
		max-width 75px!important
		max-height 75px!important
		margin 0 auto
		vertical-align middle

.work_title
	margin-top 5px
	width 100px
	font 9pt/11pt 'RobotoL'
	display block
	text-align center
	@media (min-width: 360px) {
		width 110px
	}
	@media (min-width: 390px) {
		width 120px
	}

.work_images
	position absolute
	opacity 0


.work_image
	width 100px
	height 120px
	position absolute
	background-size cover
	background-position center
	@media (min-width: 360px) {
		width 110px
	}
	@media (min-width: 390px) {
		width 120px
	}

.sort_item
	display inline
	cursor pointer
	margin-right 10px
	&:hover
		border-bottom black 1px dotted

.works_tags_sort_block
	text-align center
	width 350px
	background-color rgba(255,255,255,0.7)
	font 10pt/12pt 'Roboto'
	position fixed
	top 95%
	left 50%
	margin-left -175px
	left 50%

.work_tag
	margin-top 10px
	overflow hidden
	&:first-child
		margin-top 0px


@media screen and (min-width: 1280px) {
	.works_block.works_big .work_item:not(.archive):nth-child(1),
	.works_block.works_big .work_item:not(.archive):nth-child(2),
	.works_block.works_big .work_item:not(.archive):nth-child(3) {
		width: 400px;
		height: 400px;
	}

	.works_block.works_big .work_item:not(.archive):nth-child(1) .work_image,
	.works_block.works_big .work_item:not(.archive):nth-child(2) .work_image,
	.works_block.works_big .work_item:not(.archive):nth-child(3) .work_image {
		display: none;
	}

	.works_block.works_big .work_item:not(.archive):nth-child(1) .work_image_big,
	.works_block.works_big .work_item:not(.archive):nth-child(2) .work_image_big,
	.works_block.works_big .work_item:not(.archive):nth-child(3) .work_image_big {
		width: 400px;
		height: 400px;
		position: absolute;
		background-size: cover;
		background-position: center;
		display: block;
	}

	.works_block.works_big .work_item:not(.archive):nth-child(1) .work_logo,
	.works_block.works_big .work_item:not(.archive):nth-child(2) .work_logo,
	.works_block.works_big .work_item:not(.archive):nth-child(3) .work_logo {
		width: 150px;
		height: 270px;
		line-height: 330px;
	}

	.works_block.works_big .work_item:not(.archive):nth-child(1) .work_logo svg,
	.works_block.works_big .work_item:not(.archive):nth-child(2) .work_logo svg,
	.works_block.works_big .work_item:not(.archive):nth-child(3) .work_logo svg {
		max-width: 150px!important;
		max-height: 150px!important;
	}

	.works_block.works_big .work_item:not(.archive):nth-child(1) .work_title,
	.works_block.works_big .work_item:not(.archive):nth-child(2) .work_title,
	.works_block.works_big .work_item:not(.archive):nth-child(3) .work_title {
		width: 100%;
		font-size: 12pt;
	}
}